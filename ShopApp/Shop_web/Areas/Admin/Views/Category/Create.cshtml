@model Category
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.TitleCard = "Create Category";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<form method="post" asp-action="Create" asp-controller="Category">
    <div class="mb-3" >
        <label asp-for=@Model.Name></label>
        <input type="text" asp-for=@Model.Name class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for=@Model.Description ></label>
        <input type="text" class="form-control" asp-for=@Model.Description>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
    <button type="submit" class="btn btn-primary" asp-action="Create" asp-controller="Category" >Add</button>
        <button type="button" class="btn btn-warning" asp-action="Index" asp-controller="Category">Cancel</button>    
    </div>

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}