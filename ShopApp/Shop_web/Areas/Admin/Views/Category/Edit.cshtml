@model Category
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.TitleCard = "Edit Category";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}
<form  asp-action="Edit"  asp-controller="Category">
    <div class="mb-3">
        <input type="hidden" asp-for="Id" />
        <label asp-for=@Model.Name></label>
        <input type="text" asp-for=@Model.Name class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for=@Model.Description></label>
        <input type="text" class="form-control" asp-for=@Model.Description>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary" asp-action="Edit" asp-controller="Category">Save</button>
        <button type="button" class="btn btn-warning" asp-action="Index" asp-controller="Category">Cancel</button>
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}